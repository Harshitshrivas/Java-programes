package pattern;

public class rhombus {
    public static void main(String args[]){
        int n = 7;
        // space 
        for (int i = 1; i<=n; i++){
            for(int j=1; j<=n-i;j++){
                System.out.print(" ");
            }
            //star 
            for(int j=1; j<=n; j++){
                System.out.print("*");
            }System.out.println( );
        }
    }
}
